<div class="col-md-4 col-md-offset-4">
    {[{ r }]}
    <form class="form-horizontal" ng-submit="signIn()">

        <h1>Please sign in</h1>

        <div class="form-group">
            <label for="email" class="sr-only col-md-12">Email address</label>

            <div class="col-md-12">
                <input type="email" id="email" name="email" ng-model="email" class="form-control" placeholder="Email address" required=""
                       autofocus="">
            </div>
        </div>

        <div class="form-group">
            <label for="password" class="sr-only col-md-12">Password</label>

            <div class="col-md-12">
                <input type="password" id="password" name="password" ng-model="password" class="form-control" placeholder="Password" required="">
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <button class="btn btn-default btn-block" type="submit">Sign in</button>
            </div>
        </div>
        <div class="form-group btn-custom">
            <div class="col-md-12">
                <button class="btn btn-primary btn-block" type="submit">Sign with Facebook</button>
            </div>
            <div class="col-md-12">
                <button class="btn btn-info btn-block" type="submit">Sign with Twitter</button>
            </div>
            <div class="col-md-12">
                <button class="btn btn-danger btn-block" type="submit">Sign with Google+</button>
            </div>
        </div>
    </form>
    <div class="row">
        <div class="form-group">
            <div class="col-md-12 control">
                <div style="border-top: 1px solid#888; padding-top:15px; font-size:85%">
                    Don't have an account!
                    <a href="/signup">
                        Sign Up Here
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>